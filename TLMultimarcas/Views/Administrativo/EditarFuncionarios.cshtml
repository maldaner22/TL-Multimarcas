@model TLMultimarcas.Models.Usuario

@{
    ViewBag.Title = "EditarFuncionarios";
}

<h2>EditarFuncionarios</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Usuario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdUsuario)

        @Html.HiddenFor(model => model.NomeFuncionario)

        @Html.HiddenFor(model => model.LoginFuncionario)

        @Html.HiddenFor(model => model.SenhaFuncionario)

        @Html.HiddenFor(model => model.EmailFuncionario)

        @Html.HiddenFor(model => model.AdicionarFuncionario)

        @Html.HiddenFor(model => model.AdicionarVeiculo)

        @Html.HiddenFor(model => model.EditarFuncionario)

        @Html.HiddenFor(model => model.EditarVeiculo)

        @Html.HiddenFor(model => model.ExcluirFuncionario)

        @Html.HiddenFor(model => model.ExcluirVeiculo)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
